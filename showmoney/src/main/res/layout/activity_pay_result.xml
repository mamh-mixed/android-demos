<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:cardinfolink="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_layout">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.cardinfolink.yunshouyin.ui.SettingActionBarItem
            android:id="@+id/action_bar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            cardinfolink:left_text="@string/setting_return" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_pay_result"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/pay_result_success"
                android:textColor="@color/textview_textcolor_pay_success"
                android:textSize="35sp" />

            <ImageView
                android:id="@+id/iv_pay_result"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginLeft="10dp"
                android:src="@drawable/pay_result_succeed" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_result_explain"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:text="@string/pay_result_explain"
                android:textColor="@color/textview_textcolor_pay_result_explain"
                android:textSize="20sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="@string/pay_channel"
                    android:textSize="18sp" />

                <ImageView
                    android:id="@+id/pay_chcd"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:src="@drawable/setting_wechat" />

            </RelativeLayout>

            <com.cardinfolink.yunshouyin.ui.ResultInfoItem
                android:id="@+id/pay_account"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                cardinfolink:left_text="@string/pay_account" />

            <com.cardinfolink.yunshouyin.ui.ResultInfoItem
                android:id="@+id/pay_datetime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                cardinfolink:left_text="@string/pay_datetime" />

            <com.cardinfolink.yunshouyin.ui.ResultInfoItem
                android:id="@+id/order_number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                cardinfolink:left_text="@string/pay_order_number" />

            <com.cardinfolink.yunshouyin.ui.ResultInfoItem
                android:id="@+id/rif_coupon_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                cardinfolink:left_text="卡券内容" />

            <com.cardinfolink.yunshouyin.ui.ResultInfoItem
                android:id="@+id/rif_coupon_total"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                cardinfolink:left_text="消费金额" />

            <com.cardinfolink.yunshouyin.ui.ResultInfoItem
                android:id="@+id/rif_coupon_discount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                cardinfolink:left_text="优惠金额" />


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:layout_marginTop="15dp">

                <TextView
                    android:id="@+id/total_state"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:text="@string/pay_total_state_success"
                    android:textColor="@color/textview_textcolor_pay_success"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/total_money"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="15dp"
                    android:textColor="@color/textview_textcolor_pay_success"
                    android:textSize="25sp" />

            </RelativeLayout>

            <Button
                android:id="@+id/btnconfirm"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/blue_selector"
                android:text="@string/txt_confirm"
                android:textColor="@color/button_textcolor" />

        </LinearLayout>


    </LinearLayout>


    <include layout="@layout/hint_dialog" />
</RelativeLayout>