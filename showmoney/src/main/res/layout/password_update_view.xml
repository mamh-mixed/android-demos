<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_blue"
    android:orientation="vertical">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="16dp"
        android:text="@string/update_password"
        android:textColor="@color/white"
        android:textSize="@dimen/update_textview_size" />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/update_margin_top">

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/bluemain_bg"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="@dimen/update_imageview_height"
                android:layout_height="@dimen/update_imageview_height"
                android:layout_marginLeft="15dp"
                android:src="@drawable/password" />

            <EditText
                android:id="@+id/update_password_oldpwd"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/update_editext_height"
                android:background="@null"
                android:ems="10"
                android:hint="@string/update_password_hint_oldpwd"
                android:inputType="textPassword"
                android:paddingLeft="15dp"
                android:singleLine="true"
                android:textColor="@color/white"
                android:textColorHint="@color/gray3" />
        </TableRow>

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="@dimen/update_margin_top"
            android:background="@drawable/bluemain_bg"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="@dimen/update_imageview_height"
                android:layout_height="@dimen/update_imageview_height"
                android:layout_marginLeft="15dp"
                android:src="@drawable/password" />

            <EditText
                android:id="@+id/update_password_newpwd"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/update_editext_height"
                android:background="@null"
                android:ems="10"
                android:hint="@string/update_password_hint_newpwd"
                android:inputType="textPassword"
                android:paddingLeft="15dp"
                android:singleLine="true"
                android:textColor="@color/white"
                android:textColorHint="@color/gray3" />
        </TableRow>

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="@dimen/update_margin_top"
            android:background="@drawable/bluemain_bg"
            android:gravity="center_vertical">

            <ImageView

                android:layout_width="@dimen/update_imageview_height"
                android:layout_height="@dimen/update_imageview_height"
                android:layout_marginLeft="15dp"
                android:src="@drawable/password" />

            <EditText
                android:id="@+id/update_password_qr_newpwd"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/update_editext_height"
                android:background="@null"
                android:ems="10"
                android:hint="@string/update_password_hint_qr_newpwd"
                android:inputType="textPassword"
                android:paddingLeft="15dp"
                android:singleLine="true"
                android:textColor="@color/white"
                android:textColorHint="@color/gray3" />
        </TableRow>
    </TableLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/update_margin_top"
        android:gravity="center">

        <Button
            android:id="@+id/btn_update_password"
            android:layout_width="match_parent"
            android:layout_height="@dimen/update_editext_height"
            android:background="@drawable/blue_selector"
            android:text="@string/qr_update"
            android:textColor="@color/white"
            android:textSize="@dimen/update_btn_size"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"/>


    </LinearLayout>

</LinearLayout>




