<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1EBED6"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="16dp"
        android:text="@string/my_bill"
        android:textColor="#FFFFFF"
        android:textSize="22dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:padding="20dp">

        <RadioGroup
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/radio_button_bg"

            android:gravity="center"
            android:orientation="horizontal"
            android:padding="2dp">

            <RadioButton
                android:id="@+id/radio_all"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/radio_button1_selector"
                android:button="@null"
                android:checked="true"
                android:padding="7dp"
                android:text="@string/txn_all"
                android:textColor="@drawable/radio_button_txt_bg" />

            <RadioButton
                android:id="@+id/radio_success"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/radio_button2_selector"
                android:button="@null"
                android:padding="7dp"
                android:text="@string/txn_success"
                android:textColor="@drawable/radio_button_txt_bg" />

            <RadioButton
                android:id="@+id/radio_fail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/radio_button3_selector"
                android:button="@null"
                android:padding="7dp"
                android:text="@string/txn_failed"
                android:textColor="@drawable/radio_button_txt_bg" />


        </RadioGroup>

    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="#FFFFFF"
        android:orientation="vertical">

        <TextView
            android:id="@+id/bill_tips"
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:background="#DCDDDE"
            android:gravity="center"
            android:text=""
            android:textSize="13sp" />


        <com.handmark.pulltorefresh.library.PullToRefreshListView
            android:id="@+id/pull_refresh_list"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent" />

    </LinearLayout>

</LinearLayout>
