<?xml version="1.0" encoding="utf-8"?><!-- trading_custom_dialog 现在只有一个loading的 对话框 其他功能复用 hint dialog -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/trading_load_dialog"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_centerInParent="true"
    android:background="#40000000"
    android:visibility="gone">

    <!-- 读取交易 loading 的对话框 -->
    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="200dp"
        android:layout_centerInParent="true"
        android:background="@drawable/dialog_bg"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp">

            <ImageView
                android:id="@+id/trading_load_img"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_centerInParent="true"
                android:src="@drawable/loading" />
        </RelativeLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <TextView
                android:id="@+id/trading_load_message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:text="@string/txt_txn_pending_msg"
                android:textSize="17sp" />

            <TextView
                android:id="@+id/trading_load_second"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0S"
                android:textColor="#00bbd3"
                android:textSize="17sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/trading_load_cancel"
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/dialog_button_selector"
                android:gravity="center"
                android:text="@string/detail_activity_busicd_canc"
                android:textColor="#ffffff"
                android:textSize="17sp" />


        </LinearLayout>

    </LinearLayout>
    <!-- 读取交易 loading 的对话框 -->

</RelativeLayout><!-- trading_custom_dialog 对话框-->
