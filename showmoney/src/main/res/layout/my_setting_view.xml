<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:cardinfolink="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="16dp"
        android:text="设置界面"
        android:textSize="22sp" />

    <View
        android:layout_width="fill_parent"
        android:layout_height="0.1dp"
        android:background="#88000000" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:orientation="vertical"
        android:layout_height="wrap_content">

        <com.cardinfolink.yunshouyin.ui.SettingClikcView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:clickable="true"
            cardinfolink:title="@string/setting_account" />

        <com.cardinfolink.yunshouyin.ui.SettingClikcView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:clickable="true"
            cardinfolink:title="@string/setting_support_channel" />

        <com.cardinfolink.yunshouyin.ui.SettingClikcView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:clickable="true"
            cardinfolink:title="@string/setting_my_web_yunshouyin" />

        <com.cardinfolink.yunshouyin.ui.SettingClikcView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:clickable="true"
            cardinfolink:title="@string/setting_about_yunshouyin" />

    </LinearLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <Button
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:layout_centerInParent="true"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:background="@drawable/white_selector"
            android:text="安全退出" />
    </RelativeLayout>

</LinearLayout>
