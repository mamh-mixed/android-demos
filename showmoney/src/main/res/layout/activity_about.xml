<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:cardinfolink="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical">

    <com.cardinfolink.yunshouyin.ui.SettingActionBarItem
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        cardinfolink:left_text="返回"
        cardinfolink:title="关于云收银" />

    <com.cardinfolink.yunshouyin.ui.SettingDetailItem
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        cardinfolink:detail="2.1"
        cardinfolink:title="版本号" />

    <com.cardinfolink.yunshouyin.ui.SettingClikcItem
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        cardinfolink:right_text="www.shoe.money"
        cardinfolink:title="产品网站" />

    <com.cardinfolink.yunshouyin.ui.SettingClikcItem
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        cardinfolink:title="欢迎页" />

    <com.cardinfolink.yunshouyin.ui.SettingClikcItem
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        cardinfolink:title="检查系统更新" />

</LinearLayout>
