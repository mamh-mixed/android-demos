<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_keyboard"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <LinearLayout
        android:id="@+id/bt_line1"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_seven"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@drawable/white_selector"
            android:gravity="center"
            android:text="7"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/tv_four"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@drawable/white_selector"
            android:gravity="center"
            android:text="4"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/tv_one"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@drawable/white_selector"
            android:gravity="center"
            android:text="1"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/tv_point"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@drawable/white_selector"
            android:gravity="center"
            android:text="."
            android:textSize="50sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/bt_line2"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_eight"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@drawable/white_selector"
            android:gravity="center"
            android:text="8"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/tv_five"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@drawable/white_selector"
            android:gravity="center"
            android:text="5"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/tv_two"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@drawable/white_selector"
            android:gravity="center"
            android:text="2"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/tv_zero"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@drawable/white_selector"
            android:gravity="center"
            android:text="0"
            android:textSize="30sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/bt_line3"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_nine"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@drawable/white_selector"
            android:gravity="center"
            android:text="9"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/tv_six"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@drawable/white_selector"
            android:gravity="center"
            android:text="6"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/tv_three"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@drawable/white_selector"
            android:gravity="center"
            android:text="3"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/tv_add"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@drawable/white_selector"
            android:gravity="center"
            android:text="+"
            android:textSize="30sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/bt_line4"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_del"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@drawable/recall_selector" />

        <TextView
            android:id="@+id/tv_clear"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@drawable/white_selector"
            android:gravity="center"
            android:text="清空"
            android:textSize="30sp" />

        <ImageView
            android:id="@+id/scancodepay"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:src="@drawable/scan_pay" />

    </LinearLayout>

</LinearLayout>


