<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/paylogo"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_centerVertical="true"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="5dp"
        android:src="@drawable/wpay" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/paylogo">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/bill_tradefrom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="APP支付"
                android:textColor="#000000"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/bill_tradedate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2015-09-07 13:56:13"
                android:textColor="#888888"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/bill_tradestatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="10dp"
                android:text="@string/txn_status_success"
                android:textColor="#888888"
                android:textSize="13sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_margin="10dp"
            android:gravity="right"
            android:orientation="vertical">

            <TextView
                android:id="@+id/bill_tradeamount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:text="￥100"
                android:textColor="#000000"
                android:textSize="15sp" />

            <Button
                android:id="@+id/bill_tradedetail"
                android:layout_width="50dp"
                android:layout_height="30dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/white_selector"
                android:padding="5dp"
                android:text="@string/txt_txn_detail"
                android:textColor="#FFFFFF"
                android:textSize="12sp" />


        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>