<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_login_layout">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3"
            android:gravity="bottom">

            <ImageView
                android:id="@+id/logo"
                android:layout_width="139dp"
                android:layout_height="37.5dp"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:src="@drawable/login_logo2" />

            <ImageView
                android:id="@+id/iv_loading"
                android:layout_width="27dp"
                android:layout_height="27dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:src="@drawable/login_wait"
                android:visibility="gone" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="10dp"
            android:layout_weight="3"
            android:gravity="center"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/login_bg1"
                android:focusable="true"
                android:focusableInTouchMode="true">

                <TextView
                    android:id="@+id/tv_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:text="@string/login_account"
                    android:textColor="@color/textview_textcolor_login"
                    android:textSize="16sp" />

                <com.cardinfolink.yunshouyin.ui.EditTextClear
                    android:id="@+id/login_username"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginTop="10dp"
                    android:layout_toRightOf="@+id/tv_title"
                    android:background="@null"
                    android:ems="10"
                    android:hint="@string/login_hint_username"
                    android:inputType="text"
                    android:textColor="@color/textview_textcolor_login"
                    android:textSize="16sp" />

                <ImageView
                    android:id="@+id/iv_increase"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="15dp"
                    android:src="@drawable/login_increase"
                    android:visibility="gone" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="0.3dp"
                android:background="@drawable/login_bg2"
                android:focusable="true"
                android:focusableInTouchMode="true">

                <TextView
                    android:id="@+id/tv_title1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:text="@string/login_password"
                    android:textColor="@color/textview_textcolor_login"
                    android:textSize="16sp" />

                <com.cardinfolink.yunshouyin.ui.EditTextClear
                    android:id="@+id/login_password"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginTop="10dp"
                    android:layout_toRightOf="@+id/tv_title1"
                    android:background="@null"
                    android:ems="10"
                    android:hint="@string/login_hint_password"
                    android:inputType="textPassword"
                    android:textColor="@color/textview_textcolor_login"
                    android:textSize="16sp" />

                <ImageView
                    android:id="@+id/iv_help"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="15dp"
                    android:src="@drawable/login_help" />


            </RelativeLayout>

        </LinearLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="15dp"
            android:layout_weight="1">

            <CheckBox
                android:id="@+id/login_auto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:button="@drawable/checkbox_selector"
                android:paddingLeft="5dp"
                android:text="@string/login_auto_login"
                android:textColor="@color/textview_textcolor_login"
                android:textSize="16sp" />

            <ImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_alignRight="@+id/tv_register"
                android:layout_centerVertical="true"
                android:layout_marginRight="45dp"
                android:src="@drawable/login_register" />

            <TextView
                android:id="@+id/tv_register"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="5dp"
                android:text="@string/login_register"
                android:textColor="@color/textview_textcolor_login"
                android:textSize="16sp" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="4"
            android:gravity="center">

            <Button
                android:id="@+id/btnlogin"
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:background="@drawable/blue_selector"
                android:text="@string/login"
                android:textColor="@color/button_textcolor"
                android:textSize="18sp" />

        </LinearLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="30dp"
            android:layout_weight="1">


            <ImageView
                android:layout_width="80dp"
                android:layout_height="16dp"
                android:layout_centerInParent="true"
                android:layout_marginBottom="30dp"
                android:src="@drawable/login_cardinfolink1" />
        </RelativeLayout>


    </LinearLayout>

    <!--这个对话的布局要放在相对布局里面！！！因为它用到了这个：   android:gravity="center_horizontal"-->
    <include layout="@layout/showmoney_dialog" />

    <include layout="@layout/activate_dialog" />

    <include layout="@layout/hint_dialog" />

    <include layout="@layout/yellow_tips_layout" />

</RelativeLayout>