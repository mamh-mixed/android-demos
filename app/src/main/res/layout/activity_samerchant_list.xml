<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1EBED6"
    android:padding="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/mItem_txtSearch"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingLeft="15dp"
                android:singleLine="true"
                android:textColor="#FFFFFF"
                android:textColorHint="#eeeeee"
                android:hint="@string/search_hint" />

            <Button
                android:id="@+id/btnAddNewMerchant"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/blue_selector"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:text="@string/add_newuser" />
        </LinearLayout>

        <TextView
            android:text="本月已经发展商户: 0 家"
            android:textColor="#FFFFFF"
            android:paddingLeft="15dp"
            android:id="@+id/txt_merchantcountthismonth"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <android.support.v4.widget.SwipeRefreshLayout
            android:id="@+id/swipe_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ListView
                android:id="@+id/listViewMerchants"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:divider="#eae9e2"
                android:dividerHeight="1dp" />
        </android.support.v4.widget.SwipeRefreshLayout>
    </LinearLayout>

    <include layout="@layout/showmoney_dialog"></include>

</RelativeLayout>