<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1EBED6"
    android:orientation="vertical">

    <TextView
        android:id="@+id/mItem_txtMerchantName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="金鴻西餐厅"
        android:textColor="#ffffff"
        android:textSize="22sp"
        android:textStyle="bold" />


    <TableLayout
        android:id="@+id/mItem_detailViewGroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:shrinkColumns="1"
        android:visibility="visible">

        <TableRow>

            <TextView
                android:id="@+id/textView8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_span="2"
                android:text="App登录信息"
                android:textColor="#ffffff"
                android:textSize="18dp" />
        </TableRow>

        <TableRow>

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="注册邮箱: "
                android:textColor="#ffffff"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/mItem_txtEmail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="826488846@qq.com"
                android:textColor="#ffffff"
                android:textSize="16dp" />
        </TableRow>

        <TableRow>

            <TextView
                android:id="@+id/textView9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_span="2"
                android:text="桌面版信息"
                android:textColor="#ffffff"
                android:textSize="18dp" />
        </TableRow>

        <TableRow>

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="商户号: "
                android:textColor="#ffffff"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/mItem_txtMerchantId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="99911888993832300023"
                android:textColor="#ffffff"
                android:textSize="16dp" />
        </TableRow>

        <TableRow>

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="秘钥: "
                android:textColor="#ffffff"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/mItem_txtSecretKey"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="false"
                android:text="afdsfjlkjfksjasdaisvsdfhsdsfsdfalkdfaksdjfladkfjaldfsdfjsldf"
                android:textColor="#ffffff"
                android:textSize="16dp" />
        </TableRow>

        <TableRow>

            <TextView
                android:id="@+id/textView10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_span="2"
                android:text="网页版信息"
                android:textColor="#ffffff"
                android:textSize="18dp" />
        </TableRow>

        <TableRow>

            <TextView
                android:id="@+id/merchantlist_download_qrcode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_span="2"
                android:text="@string/download_qrcode"
                android:textColor="#ffffff"
                android:textSize="16dp" />
        </TableRow>
    </TableLayout>

</LinearLayout>