<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    
  <RelativeLayout
     android:id="@+id/activate_dialog"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" 
    android:background="#40000000"
    android:visibility="gone"
       >

      <LinearLayout
    
     android:layout_width="320dp"
     android:layout_height="200dp" 
     android:orientation="vertical"
     
     android:background="@drawable/dialog_color" 
     android:layout_centerInParent="true" 
     android:gravity="center_horizontal"
       >
      
      <RelativeLayout
         android:layout_width="wrap_content"
         android:layout_height="wrap_content" 
         android:layout_margin="10dp"        
           >
          <TextView  
         android:layout_width="wrap_content"
         android:layout_height="wrap_content" 
         android:layout_centerInParent="true"
         android:text="请激活帐号"
         android:textSize="18sp"
         android:textStyle="bold"
              />
      </RelativeLayout>
      
      
    <LinearLayout
         
         android:layout_width="wrap_content"
         android:layout_height="wrap_content" 
         android:gravity="center_horizontal" 
         android:orientation="vertical"       
           >  
      <TextView
         android:id="@+id/email"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content" 
         android:textSize="17sp"        
         android:layout_marginBottom="10dp"
         android:text="@string/activate_sentto_email"
          />
          
    
      
      </LinearLayout>
      
       <LinearLayout
         android:layout_width="wrap_content"
         android:layout_height="wrap_content" 
         android:layout_marginTop="10dp"
         android:gravity="center_horizontal" 
         android:orientation="horizontal"       
           >  
      <TextView
         android:id="@+id/activate_dialog_cancel"
         android:layout_width="100dp"
         android:layout_height="40dp" 
         android:layout_marginRight="10dp"
         android:textSize="17sp" 
         android:text="取消" 
         android:background="@drawable/dialog_button_color"
         android:gravity="center" 
         
          />
          
       <TextView
         android:id="@+id/activate_dialog_ok"
         android:layout_width="100dp"
         android:layout_height="40dp" 
         android:layout_marginLeft="10dp"
         android:textSize="17sp"        
         android:text="确定"
         android:background="@drawable/dialog_button_color" 
         android:gravity="center"
          />
      
      </LinearLayout>
 </LinearLayout>
</RelativeLayout>
  
   
   <RelativeLayout
     android:id="@+id/refd_dialog"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" 
    android:visibility="gone"
     android:background="#40000000"
       >

      <LinearLayout
    
     android:layout_width="320dp"
     android:layout_height="200dp" 
     android:orientation="vertical"
     
     android:background="@drawable/dialog_color" 
     android:layout_centerInParent="true" 
     android:gravity="center_horizontal"
       >
      
      <RelativeLayout
         android:layout_width="wrap_content"
         android:layout_height="wrap_content" 
         android:layout_margin="10dp"        
           >
          <TextView 
         android:id="@+id/refd_title" 
         android:layout_width="wrap_content"
         android:layout_height="wrap_content" 
         android:layout_centerInParent="true"
         android:text="本次可退款额度：¥880"
         android:textSize="18sp"
         android:textStyle="bold"
              />
      </RelativeLayout>
      
      
    <LinearLayout
         
         android:layout_width="wrap_content"
         android:layout_height="wrap_content" 
         android:gravity="center_horizontal" 
         android:orientation="vertical"       
           >  
           <LinearLayout
         
         android:layout_width="wrap_content"
         android:layout_height="wrap_content" 
         android:gravity="center_vertical" 
         android:orientation="horizontal"       
           >  
      <TextView
       
         android:layout_width="wrap_content"
         android:layout_height="wrap_content" 
         android:textSize="17sp"        
         android:text="请输入退款金额："
          />
      
         <EditText 
         android:id="@+id/refd_value_edit"
         android:layout_width="100dp"
         android:layout_height="30dp" 
         android:textSize="17sp" 
         android:background="#dddddd"
         android:inputType="numberDecimal"       
        
          />
          
    </LinearLayout>
      
      </LinearLayout>
      
     <LinearLayout
         
         android:layout_width="wrap_content"
         android:layout_height="wrap_content" 
         android:gravity="center_horizontal" 
         android:orientation="vertical" 
         android:layout_marginTop="2dp"      
           >  
           <LinearLayout
         
         android:layout_width="wrap_content"
         android:layout_height="wrap_content" 
         android:gravity="center_horizontal" 
         android:orientation="horizontal"       
           >  
      <TextView
       
         android:layout_width="wrap_content"
         android:layout_height="wrap_content" 
         android:textSize="17sp"        
         android:text="请输入登录密码："
          />
      
       <EditText 
          android:id="@+id/refd_password_edit"
         android:layout_width="100dp"
         android:layout_height="30dp" 
         android:textSize="17sp" 
         android:background="#dddddd"  
         android:inputType="textPassword"    
        
          />
          
    </LinearLayout>
      
      </LinearLayout>
      
       <LinearLayout
         android:layout_width="wrap_content"
         android:layout_height="wrap_content" 
         android:layout_marginTop="15dp"
        android:gravity="center_horizontal" 
         android:orientation="horizontal"       
           >  
      <TextView
         android:id="@+id/refd_dialog_cancel"
         android:layout_width="100dp"
         android:layout_height="40dp" 
         android:layout_marginRight="10dp"
         android:textSize="17sp" 
         android:text="取消" 
         android:background="@drawable/dialog_button_color"
         android:gravity="center" 
         
          />
          
       <TextView
         android:id="@+id/refd_dialog_ok"
         android:layout_width="100dp"
         android:layout_height="40dp" 
         android:layout_marginLeft="10dp"
         android:textSize="17sp"        
         android:text="确认"
         android:background="@drawable/dialog_button_color" 
         android:gravity="center"
          />
      
      </LinearLayout>
 </LinearLayout>
</RelativeLayout>
  
   
   
   
   <RelativeLayout
     android:id="@+id/alert_dialog"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" 
    android:visibility="gone"
     android:background="#40000000"
       >

      <LinearLayout
    
     android:layout_width="220dp"
     android:layout_height="180dp" 
     android:orientation="vertical"  
     android:background="@drawable/dialog_color" 
     android:layout_centerInParent="true" 
     android:gravity="center_horizontal"
       >
      
      <RelativeLayout
         android:layout_width="wrap_content"
         android:layout_height="wrap_content" 
         android:layout_margin="10dp"        
           >
          <ImageView 
         android:id="@+id/alert_img" 
         android:layout_width="40dp"
         android:layout_height="40dp" 
         android:layout_centerInParent="true"       
       
              />
      </RelativeLayout>
      
      
    <LinearLayout
         
         android:layout_width="wrap_content"
         android:layout_height="wrap_content" 
         android:gravity="center_horizontal" 
         android:orientation="vertical"       
           >  
      <TextView
         android:id="@+id/alert_message"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content" 
         android:textSize="17sp"        
         android:layout_marginBottom="10dp"
         android:text="@string/activate_sentto_email"
          />
          
    
      
      </LinearLayout>
      
       <LinearLayout
         android:layout_width="wrap_content"
         android:layout_height="wrap_content" 
         android:layout_marginTop="10dp"
         android:gravity="center_horizontal" 
         android:orientation="horizontal"       
           >  
     
          
       <TextView
         android:id="@+id/alert_ok"
         android:layout_width="100dp"
         android:layout_height="40dp" 
         android:layout_marginLeft="10dp"
         android:textSize="17sp"        
         android:text="确定"
         android:background="@drawable/dialog_button_color" 
         android:gravity="center"
          />
      
      </LinearLayout>
 </LinearLayout>
</RelativeLayout>

   <RelativeLayout
    android:id="@+id/loading_dialog"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" 
    android:background="#40000000"
    android:visibility="gone"
       >
       <ImageView 
         android:id="@+id/load_img" 
         android:layout_width="40dp"
         android:layout_height="40dp" 
         android:src="@drawable/loading"
         android:layout_centerInParent="true"
              />
       
      </RelativeLayout>
      
   
     <RelativeLayout
     android:id="@+id/trading_custom_dialog"
     android:layout_width="fill_parent"
     android:layout_height="fill_parent" 
     android:layout_centerInParent="true"
     android:background="#40000000"
     android:visibility="gone"
       >
  
  <LinearLayout
     android:id="@+id/trading_custom_dialog_loading"
     android:layout_width="300dp"
     android:layout_height="200dp" 
     android:orientation="vertical"
     android:visibility="gone"
     android:background="@drawable/dialog_color"  
     android:gravity="center_horizontal"
     android:layout_centerInParent="true"
       >
      
      <RelativeLayout
         android:layout_width="wrap_content"
         android:layout_height="wrap_content" 
         android:layout_margin="10dp"        
           >
          <ImageView 
         android:id="@+id/trading_custom_dialog_load_img" 
         android:layout_width="40dp"
         android:layout_height="40dp" 
         android:src="@drawable/loading"
         android:layout_centerInParent="true"
              />
      </RelativeLayout>
      
      
    <LinearLayout
         android:layout_width="wrap_content"
         android:layout_height="wrap_content" 
         android:gravity="center_horizontal" 
         android:orientation="vertical"       
           >  
      <TextView
          
         android:layout_width="wrap_content"
         android:layout_height="wrap_content" 
         android:textSize="17sp" 
         android:text="交易读取中，请稍后。。。"  
         android:layout_marginBottom="10dp"
          />
          
       <TextView
         android:id="@+id/second"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content" 
         android:textSize="17sp" 
         android:textColor="#00bbd3"
         android:text="0S"
          />
      
      </LinearLayout>
      
       <LinearLayout
         android:layout_width="wrap_content"
         android:layout_height="wrap_content" 
         android:layout_marginTop="10dp"
         android:gravity="center_horizontal" 
         android:orientation="horizontal"       
           >  
      <TextView
         android:id="@+id/query"
         android:layout_width="100dp"
         android:layout_height="40dp" 
         android:layout_marginRight="10dp"
         android:textSize="17sp" 
         android:text="查询结果" 
         android:background="@drawable/dialog_button_color"
         android:gravity="center" 
         
          />
          
       <TextView
         android:id="@+id/close"
         android:layout_width="100dp"
         android:layout_height="40dp" 
         android:layout_marginLeft="10dp"
         android:textSize="17sp"        
         android:text="关闭"
         android:background="@drawable/dialog_button_color" 
         android:gravity="center"
         android:visibility="gone"
          />
      
      </LinearLayout>
      
      </LinearLayout>
      
  
   <LinearLayout
     android:id="@+id/trading_custom_dialog_nopay"
     android:layout_width="300dp"
     android:layout_height="200dp" 
     android:orientation="vertical"
     android:visibility="gone"
     android:background="@drawable/dialog_color"  
     android:gravity="center_horizontal"
     android:layout_centerInParent="true"
       >
      
      <RelativeLayout
         android:layout_width="wrap_content"
         android:layout_height="wrap_content" 
         android:layout_margin="10dp"        
           >
          <ImageView       
         android:layout_width="40dp"
         android:layout_height="40dp"        
         android:layout_centerInParent="true"
              />
      </RelativeLayout>
      
      
    <LinearLayout
         android:layout_width="wrap_content"
         android:layout_height="wrap_content" 
         android:gravity="center_horizontal" 
         android:orientation="vertical"       
           >  
      <TextView
          
         android:layout_width="wrap_content"
         android:layout_height="wrap_content" 
         android:textSize="17sp" 
         android:text="@string/dialog_trade_nopay"  
         android:layout_marginBottom="10dp"
          />
          
       
      
      </LinearLayout>
      
       <LinearLayout
         android:layout_width="wrap_content"
         android:layout_height="wrap_content" 
         android:layout_marginTop="10dp"
         android:gravity="center_horizontal" 
         android:orientation="horizontal"       
           >  
      <TextView
         android:id="@+id/nopay_query"
         android:layout_width="100dp"
         android:layout_height="40dp" 
         android:layout_marginRight="10dp"
         android:textSize="17sp" 
         android:text="查询结果" 
         android:background="@drawable/dialog_button_color"
         android:gravity="center" 
         
          />
          
       <TextView
         android:id="@+id/nopay_close"
         android:layout_width="100dp"
         android:layout_height="40dp" 
         android:layout_marginLeft="10dp"
         android:textSize="17sp"        
         android:text="关闭"
         android:background="@drawable/dialog_button_color" 
         android:gravity="center"
         android:visibility="gone"
          />
      
      </LinearLayout>
      
      </LinearLayout>
  
  
      <LinearLayout
     android:id="@+id/trading_custom_dialog_success"
     android:layout_width="300dp"
     android:layout_height="200dp" 
     android:orientation="vertical"
     android:visibility="gone"
     android:background="@drawable/dialog_color"  
     android:gravity="center_horizontal"
     android:layout_centerInParent="true"
       >
      
      <RelativeLayout
         android:layout_width="wrap_content"
         android:layout_height="wrap_content" 
         android:layout_margin="10dp"        
           >
          <ImageView  
         android:layout_width="40dp"
         android:layout_height="40dp" 
         android:src="@drawable/right"
         android:layout_centerInParent="true"
              />
      </RelativeLayout>
      
      
    <LinearLayout
         
         android:layout_width="wrap_content"
         android:layout_height="wrap_content" 
         android:gravity="center_horizontal" 
         android:orientation="vertical"       
           >  
      <TextView
          
         android:layout_width="wrap_content"
         android:layout_height="wrap_content" 
         android:textSize="17sp" 
         android:text="@string/dialog_trade_success"  
         android:layout_marginBottom="10dp"
          />
          
    
      
      </LinearLayout>
      
       <LinearLayout
         android:layout_width="wrap_content"
         android:layout_height="wrap_content" 
         android:layout_marginTop="10dp"
         android:gravity="center_horizontal" 
         android:orientation="horizontal"       
           >  
      <TextView
         android:id="@+id/histroy"
         android:layout_width="100dp"
         android:layout_height="40dp" 
         android:layout_marginRight="10dp"
         android:textSize="17sp" 
         android:text="历史交易" 
         android:background="@drawable/dialog_button_color"
         android:gravity="center" 
         
          />
          
       <TextView
         android:id="@+id/success_dialog_back"
         android:layout_width="100dp"
         android:layout_height="40dp" 
         android:layout_marginLeft="10dp"
         android:textSize="17sp"        
         android:text="返回"
         android:background="@drawable/dialog_button_color" 
         android:gravity="center"
          />
      
      </LinearLayout>
 </LinearLayout>

      
      
      
      
  
   <LinearLayout
     android:id="@+id/trading_custom_dialog_fail"
     android:layout_width="300dp"
     android:layout_height="200dp" 
     android:orientation="vertical"
     android:visibility="gone"
     android:background="@drawable/dialog_color"  
     android:gravity="center_horizontal"
     android:layout_centerInParent="true"
       >
      
      <RelativeLayout
         android:layout_width="wrap_content"
         android:layout_height="wrap_content" 
         android:layout_margin="10dp"        
           >
          <ImageView  
         android:layout_width="40dp"
         android:layout_height="40dp" 
         android:src="@drawable/wrong"
         android:layout_centerInParent="true"
              />
      </RelativeLayout>
      
      
    <LinearLayout
         
         android:layout_width="wrap_content"
         android:layout_height="wrap_content" 
         android:gravity="center_horizontal" 
         android:orientation="vertical"       
           >  
      <TextView
          
         android:layout_width="wrap_content"
         android:layout_height="wrap_content" 
         android:textSize="17sp" 
         android:text="@string/dialog_trade_fail"  
         android:layout_marginBottom="10dp"
          />
          
    
      
      </LinearLayout>
      
       <LinearLayout
         android:layout_width="wrap_content"
         android:layout_height="wrap_content" 
         android:layout_marginTop="10dp"
         android:gravity="center_horizontal" 
         android:orientation="horizontal"       
           >  
      <TextView
         android:id="@+id/fail_query"
         android:layout_width="100dp"
         android:layout_height="40dp" 
         android:layout_marginRight="10dp"
         android:textSize="17sp" 
         android:text="查询结果" 
         android:background="@drawable/dialog_button_color"
         android:gravity="center" 
         
          />
          
       <TextView
         android:id="@+id/fail_dialog_back"
         android:layout_width="100dp"
         android:layout_height="40dp" 
         android:layout_marginLeft="10dp"
         android:textSize="17sp"        
         android:text="返回"
         android:background="@drawable/dialog_button_color" 
         android:gravity="center"
          />
      
      </LinearLayout>
 </LinearLayout>
      
      
  </RelativeLayout>
      
   </RelativeLayout>

